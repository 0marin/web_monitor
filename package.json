{
  "name": "web-monitor",
  "version": "1.0.0",
  "description": "Website monitoring application",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "start:prod": "mkdir -p logs/pm2 && pm2 start ecosystem.config.js --env production",
    "stop:prod": "pm2 stop ecosystem.config.js",
    "logs": "pm2 logs",
    "prepare": "npm install -g pm2",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "puppeteer": "^21.1.0",
    "node-telegram-bot-api": "^0.61.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.9.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^17.0.0",
    "supertest": "^6.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}